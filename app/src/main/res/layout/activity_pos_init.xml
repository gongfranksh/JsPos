<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".PosInit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sync_clean_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空本地交易资料" />

        <Button
            android:id="@+id/sync_upload_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传交易资料" />

        <Button
            android:id="@+id/sync_download_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同步基本资料" />

        <Button
            android:id="@+id/check_apk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查系统更新" />


        <Button
            android:id="@+id/getdeviceid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获得Device Id" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/initdisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
</LinearLayout>