<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="saleproduct"
            type="personal.wl.jspos.pos.SaleDaily" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orderproid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@{saleproduct.proId}"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orderunitqty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@{Double.toString(saleproduct.saleQty)}"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orderunitprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@{Double.toString(saleproduct.normalPrice)}"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orderunitamout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@{Double.toString(saleproduct.saleAmt)}"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

</layout>