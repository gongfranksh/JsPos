<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1111"
    tools:context=".POS">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1111"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1111"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/branch"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#1111"
                android:gravity="left"
                android:text="门店信息："
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/posmachine"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="收银机号："
                android:textSize="30sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/saletransdate"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="日期："
                android:textSize="30sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <android.support.v7.widget.SearchView
            android:id="@+id/searchproduct"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#6666"
            android:ems="13"
            android:inputType="number"
            android:textStyle="bold">

        </android.support.v7.widget.SearchView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/productlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#40f1"></android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/saleorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4f21"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal"
        tools:orientation="vertical">

        <TextView
            android:id="@+id/totoalamount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="0.00"
            android:textAlignment="gravity"
            android:textSize="50dp" />
    </LinearLayout>


    </android.support.constraint.ConstraintLayout>