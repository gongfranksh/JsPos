<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--弹出动画-->
    <style name="PopAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_pop_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_exit</item>
    </style>

    <style name="MyTablayoutstyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabBackground">@color/white</item>
        <item name="tabIndicatorColor">@color/green_normal</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/green_normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


</resources>
